<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
     <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment" />

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="47dp" >

		<MultiAutoCompleteTextView
		    android:id="@+id/multiAutoCompleteTextView1"
		    style="@style/AppBaseTheme"
		    android:layout_width="240dip"
		    android:layout_height="100dip"
		    android:layout_centerInParent="true"
		    android:layout_marginTop="10dp"
		    android:background="#90ffffff"
		    android:completionThreshold="4"
		    android:dropDownHeight="12dip"
		    android:ems="10"
		    android:hint="@string/search_hint"
		    android:padding="5dp" />

		<Button
		    android:id="@+id/button3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBottom="@+id/multiAutoCompleteTextView1"
		    android:layout_alignRight="@id/multiAutoCompleteTextView1"
		    android:layout_alignTop="@+id/multiAutoCompleteTextView1"
		    android:text="Search" />

	</RelativeLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="52dp"
	    android:layout_gravity="bottom" >

		<Button
		    android:id="@+id/button_login"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:text="Home" 
		    android:onClick="goHome"/>

		<Button
		    android:id="@+id/button_register"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Options" />

		<Button
		    android:id="@+id/button4"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Messages"
		    android:onClick="goToMessages" />

		<Button
		    android:id="@+id/changebounds"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="View All"
		    android:onClick="viewAll" />

	</LinearLayout>
	

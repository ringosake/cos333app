<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/background_grey" >
    
<RelativeLayout
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="489dp"
    android:background="@color/background_grey" >

    <!-- View Title Label -->

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_weight="0.43"
        android:background="#ffffff"
        android:gravity="bottom|center"
        android:padding="0dp"
        android:text="ubiquitus"
        android:textColor="#c5c5c5"
        android:textSize="48sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <!-- Name Label -->


    <!-- Name TextField -->


    <!-- Email Label -->

    <!-- Email TextField -->

    <!-- Password Label -->


    <!-- Password TextField -->


    <!-- Error message -->

    <!-- Login Button -->

    <!-- Link to Login Screen -->

    <TextView
        android:id="@+id/register_error"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnRegister"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:padding="10dip"
        android:textColor="@color/button_orange_up"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView1"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.43"
        android:text="Sign up with Google"
        android:textColor="#000000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editText_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/accounts_tester_account_types_spinner_reg"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:padding="10dp" />

    <EditText
        android:id="@+id/editText_number"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accounts_tester_account_types_spinner_reg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Phone number"
        android:inputType="phone"
        android:padding="10dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/orangebutton"
        android:height="48dp"
        android:text="REGISTER"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnLinkToLoginScreen"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/register_error"
        android:layout_marginTop="20dp"
        android:background="@drawable/greybottombutton"
        android:text="Already registred. Log me in!"
        android:textColor="#000000"
        android:textColorLink="#000000"
        android:textStyle="bold" />

</RelativeLayout>
</ScrollView>